---
interface CommonProps {
  variant?: 'default' | 'outline' | 'ghost' | 'neutral' | 'light';
  size?: 'default' | 'sm' | 'lg';
  class?: string;
}

interface LinkProps extends CommonProps, Omit<astroHTML.JSX.AnchorHTMLAttributes, 'class'> {
  href: string;
}

interface ButtonProps extends CommonProps, Omit<astroHTML.JSX.ButtonHTMLAttributes, 'class'> {
  href?: undefined;
}

type Props = LinkProps | ButtonProps;

const {
  variant = 'default',
  size = 'default',
  class: className,
  href,
  ...rest
} = Astro.props as Props;

const baseStyles = "inline-flex items-center justify-center font-medium transition-all duration-300 rounded-[var(--radius-box)] focus:outline-none select-none hover:-translate-y-0.5";

const variants = {
  default: "glass-btn text-[var(--color-primary-content)] hover:brightness-110",
  neutral: "bg-[var(--color-neutral)] text-[var(--color-neutral-content)] hover:bg-opacity-90 dark:bg-opacity-60 dark:hover:bg-opacity-50 backdrop-blur-[var(--button-glass-blur)] saturate-[var(--glass-saturation)] border border-transparent shadow-md",
  light: "bg-white text-black backdrop-blur-[var(--button-glass-blur)] saturate-[var(--glass-saturation)] border border-transparent shadow-md hover:bg-gray-50 dark:bg-gray-50 dark:hover:bg-white",
  outline: "border border-[var(--color-primary)] text-[var(--color-primary)] bg-transparent hover:bg-[var(--color-primary)]/10",
  ghost: "text-[var(--color-primary)] bg-transparent hover:bg-[var(--color-primary)]/10",
};

const sizes = {
  default: "h-10 px-6 py-2 text-base",
  sm: "h-9 px-5 text-sm",
  lg: "h-12 px-8 text-lg"
};

const classes = [
  baseStyles,
  variants[variant!],
  sizes[size!],
  className
].filter(Boolean).join(" ");
---

{href ? (
  <a href={href} class={classes} {...(rest as astroHTML.JSX.AnchorHTMLAttributes)}>
    <slot />
  </a>
) : (
  <button class={classes} {...(rest as astroHTML.JSX.ButtonHTMLAttributes)}>
    <slot />
  </button>
)}
