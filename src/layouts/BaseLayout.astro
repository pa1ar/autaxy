---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Autaxy - Apple Financial Report to PDF' } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Convert Apple Financial Reports into tax-compliant PDF documents for German bookkeeping" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
